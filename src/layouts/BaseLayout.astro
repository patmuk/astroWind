---
import '~/assets/styles/base.css';

import MetaTags from '~/components/common/MetaTags.astro';
import BasicScripts from '~/components/common/BasicScripts.astro';

import { MetaSEO } from '~/types';
import { SITE } from '~/config.mjs';

interface Props {
  meta?: MetaSEO;
}
import { getLangFromUrl } from '~/utils/i18n/i18n_utils';
const language = getLangFromUrl(Astro.url);

const { meta = {} } = Astro.props;
---

<!DOCTYPE html>
<html lang={language} dir={SITE.textDirection} class="2xl:text-[20px]">
  <head>
    <MetaTags {...meta} />
  </head>

  <body class="text-page bg-light dark:bg-dark tracking-tight antialiased dark:text-slate-300">
    <slot />
    <BasicScripts />
    <style is:global>
      img {
        content-visibility: auto;
      }
    </style>
  </body>
</html>
