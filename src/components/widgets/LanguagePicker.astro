---
import { Icon } from 'astro-icon';
import { languages } from '~/utils/i18n/translations';
---

<ul style={{ display: 'flex', alignItems: 'center', listStyle: 'none' }}>
  {
    Object.entries(languages).map(([lang, data]) => (
      <li style={{ marginRight: '1rem' }}>
        <a href={`/${lang}`} style={{ display: 'flex', alignItems: 'center' }}>
          <Icon name={data.icon} class="mr-1 inline-block h-5 w-5" />
          <span class="max-lg:hidden">{data.label}</span>
        </a>
      </li>
    ))
  }
</ul>
